<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include('./partials/head.ejs') %>

  <body>
    <!-- header -->
    <%- include('./partials/header.ejs') %>
    <div class="container">
      <div class="pokemon-image">
        <img src="<%=pokemon.img%> " alt="<%=pokemon.name%>">        
      </div>

      <div class="detail">
        ID: <%=pokemon.id%> <br>
        name: <%=pokemon.name%> <br>
        <h5>type:</h5>
        <% pokemon.type.forEach((type,index)=>{ %>
          <span class="type">
            <%=type%>
          </span>   
        <% }) %> 
        <h5>stats:</h5>
        <% for(const stat in pokemon.stats){ %>
          <%=stat%>: <%=pokemon.stats[stat] %> <br>
        <% } %> 
        <a href="/pokemon/<%=index%>/edit "><button>edit</button></a>
        <form action="/pokemon/<%=index%>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE">
        </form>
      </div>

      
    </div>
    


  </body>
</html>
